<body id="body">
  <%- include('partials/navbar') -%>
  <div class="container">
   
       <div class="box"> 
         <h1 id="fill"> Your information </h1>
     <form id="payform" action="/airtime" method="POST">
       <label > Fullname : </label>
        <input id="fullname" class="form-control" type="text" name="fullname" placeholder="Your name here" required >
        <label > Phone number :</label>
        <input  id="phonenumber" type="text" class="form-control" name="phonenumber" placeholder="Phone number" required>
        <label > Email:</label>
        <input id="email" type="email" class="form-control" name="email" placeholder="Email here" required>
        <label > Amount :</label>
        <input id="amount" type="number" class="form-control" name="amount" placeholder="amount" required>
        <button class="btn btn-dark" id="continue"> Continue </button>
     </form> 
       </div>
  </div>

 

 
  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
